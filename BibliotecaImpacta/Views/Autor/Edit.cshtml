@model BibliotecaImpacta.Models.Autor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col s12 m7">
    <div class="card">
        <div class="card-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-horizontal">
                    <h4>Cadastro de Autor</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <div class="row">
                            <div class="input-field col s8">
                                <i class="material-icons prefix">library_books</i>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "active" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <button class="btn green waves-green waves-effect" type="submit" name="action">
                            Salvar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>


                </div>
            }
        </div>
    </div>
</div>

<div class="card-action">
    @Html.ActionLink("Voltar para a lista", "Details")
</div>