
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col s12 12 l6">
        <div class="card light-blue darken-1 hoverable">
            <div class="card-content white-text">
                <span class="card-title">Cadastrar Categoria</span>
                <p>
                    Cadastre uma nova Categoria.
                </p>
            </div>
            <div class="card-action">
                @Html.ActionLink("Cadastrar", "Create")
            </div>
        </div>
    </div>
    <div class="col s12 m12 l6">
        <div class="card light-blue darken-1 hoverable">
            <div class="card-content white-text ">
                <span class="card-title">Listar Categorias</span>
                <p>
                    Visualize todas as Categorias.
                </p>
            </div>
            <div class="card-action">
                @Html.ActionLink("Listar", "Details")
            </div>
        </div>
    </div>
</div>